<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.omar.practice_final.MainMenu">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu1"
        android:id="@+id/button8"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="beginLearning" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu5"
        android:id="@+id/button9"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu4"
        android:id="@+id/button10"
        android:layout_above="@+id/button9"
        android:layout_alignLeft="@+id/button8"
        android:layout_marginBottom="20dp"
        android:onClick="settings" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu3"
        android:id="@+id/button11"
        android:layout_above="@+id/button10"
        android:layout_alignLeft="@+id/button8"
        android:layout_marginBottom="20dp"
        android:onClick="compare" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu2"
        android:id="@+id/button12"
        android:layout_above="@+id/button11"
        android:layout_alignLeft="@+id/button8"
        android:layout_marginBottom="20dp"
        android:onClick="profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyString"
        android:id="@+id/TVusername"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
